@model List<Category>

<div class="container">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">Category List</h2>
		</div>

		<div class="col-6 text-end pb-3">
			<a asp-controller="Category" asp-action="Create" class="btn btn-primary"> <i class="bi bi-plus-square"></i> Add New</a>
		</div>
	</div>

	<table class=" text-center table table-bordered table-striped">
	<thead>
	<tr>

		<th>Category Name</th>
		<th>Display Order</th>

	</tr>
	</thead>
		<tbody style="align-content:center; ">
	@foreach (var item in Model.OrderBy(uu=>uu.DisplayOrder))
	{
		
		<tr>
		<td>@item.Name </td>
		<td>@item.DisplayOrder </td>
		<td>
			<div  class="w-50 btn-group " role="group">

							<a asp-controller="Category" asp-action="Edit" asp-route-CategoryID="@item.Id"  class="btn btn-primary mx-1">
								<i class="bi bi-pencil-square"></i> Edit
				</a>

							<a asp-controller="Category" asp-action="Delete" asp-route-CategoryID="@item.Id" class="btn btn-danger mx-0">
								<i class="bi bi-trash3"></i> Delete
				</a> 

			</div>


		</td>
	    </tr>
    }
	</tbody>
</table>

</div>